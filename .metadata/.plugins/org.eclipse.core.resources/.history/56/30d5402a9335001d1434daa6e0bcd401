package sec2;

import java.util.Calendar;

public class Ref2 {

	public static void main(String[] args) {
		week today = null;
		
		
		Calendar cal = Calendar.getInstance();
		int w = cal.get(Calendar.DAY_OF_WEEK);
		//System.out.println(w); //1~7
		System.out.println();
		switch(w){
			case 1:
				today=week.SUNDAY;
				break;
			case 2:
				today=week.MONDAY;
				break;
			case 3:
				today=week.TUESDAY;
				break;
			case 4:
				today=week.WENDESDAY;
				break;
			case 5:
				today=week.THURSDAY;
				break;
			case 6:
				today=week.FRIDAY;
				break;
			case 7:
				today=week.SATURDAY;
				break;
		}
	}

}
